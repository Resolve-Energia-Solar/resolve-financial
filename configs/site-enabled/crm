server {
    server_name crm.resolvenergiasolar.com;
    listen 80;

    return 301 https://$host$request_uri;
}

server {
    server_name crm.resolvenergiasolar.com;

    client_max_body_size 52M;

    location / {
        proxy_pass http://0.0.0.0:8060;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    
    location /static/ {
        alias /home/azureuser/www/data/crm/staticfiles/;
    }

    listen 80; # managed by Certbot
    
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/crm.resolvenergiasolar.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/crm.resolvenergiasolar.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}
